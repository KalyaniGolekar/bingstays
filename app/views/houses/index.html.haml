.center
  %h2 Properties
  
#sidebar
  #filters
    Filter
    = form_tag houses_path, :method => :get, :id => 'house_ratings_form' do
      Include:
      - @all_house_ratings.each do |rating|
        = rating
        = check_box_tag "houses_ratings[#{rating}]",1, (@selected_house_ratings.include? rating),:id => "houses_ratings_{rating}"
      = submit_tag 'Refresh', :id => 'house_ratings_submit'
  #favs
    %strong My favorites

#content
  - @houses.each do |h|
    .house
      = h.name
      %br
      .desc
        = h.avg_house_rating 
        %br
        = h.lord_name 
        %br
        = h.avg_lord_rating 
        %br
        = h.capacity 
        %br
        = h.price 
        %br
        = h.description 
        %br
        = link_to "Update/Remove", house_path(h)


.center          
  = link_to 'Add new house', new_house_path
        
